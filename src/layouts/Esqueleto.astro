---
import InicioIcon from "../components/icons/Inicio_Icon.astro"
import ContactoIcon from "../components/icons/Contacto_Icon.astro"
---
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portafolio María Duvale</title>
</head>

<main class="main-container">
    <nav>
       <a href="https://portafolio-maria-duvale.netlify.app/"><span>Inicio</span>
            <InicioIcon class="w-icon h-icon" />
            <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
            </svg>
        </a> 
       <a href="https://portafolio-maria-duvale.netlify.app/contacto/"><span>Contacto</span>
            <ContactoIcon class="w-icon h-icon" />
        </a>
    </nav>
</main>
<body>
    <slot/>
</body>
<footer>María del Mar Duvale Barbeitos ©</footer>
</html>

<style>
    
    a {
        color:black;
        text-decoration: none;
        margin: .1rem;

    }
</style>

<style is:global>
    *{
        box-sizing: border-box;
    }
    body {
        color:rgb(21, 21, 21);
        background-color:rgb(200, 218, 213);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
        
    }
    p {
        opacity: .5;
    }
    h1,h2,h3 {
        opacity: .9;
    }
    h2 {
        font-size: 1.1rem;
    }
    h3 {
        font-size: 1rem;
    
    }
    footer {
        text-align: end;
        margin-top: 2rem;
        opacity: .5;
    }
    .main-container {
        display: flex;
        float: right;
    }

   a {
    display: inline-block;
    width: fit-content;
   }

    a span {
        cursor: pointer;
        display: inline-block;
        text-indent: -9999px;
    }


  .w-icon {
    width: 2rem;
  }
  .h-icon {
    height: 2rem;
  }

</style>