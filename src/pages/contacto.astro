---
import Esqueleto from "../layouts/Esqueleto.astro";

---
<Esqueleto titulo="Página de Contacto" idioma="es">
    <header>Página de contacto.</header>
        
        <form class="formulario-contacto">
            <fieldset class="dts_prsonales">
                <legend class="titulo"><svg id="icon-pag-contact" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
                </svg>Contáctame!</legend>
                <label>Nombre: <input name="nombre" type="text" placeholder="María" required></label>
                <label>Apellidos: <input name="apellido" type="text" placeholder="Duvale Barbeitos" required></label>
                <label>Email: <input type="email" name="email" placeholder="maria@gmail.com" required></label>
                <textarea rows="15" cols="30" placeholder="Deja aquí tu comentario" aria-label="comentarios"></textarea>
            </fieldset>
            <fieldset class="botones">
                <button type="reset" name="reset_btn" value="reset_btn">Reiniciar</button>
                <button type="submit" name="enviar_btn" value="enviar_btn">Enviar</button>
            </fieldset>
        </form>
    
</Esqueleto> 

<style>
    header {
        display:none
    }
    #icon-pag-contact {
        width: 30px;
        height: 30px;
        margin: 0 auto;
        
    }

    legend #icon-pag-contact {
        display: flex;
        align-items: center;
        justify-content: center;
        
    }

    .formulario-contacto {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        border-style: none; 
        width: 100%;

    }
    
    label {
        display: block;
        margin-bottom: .5rem;
    }
    
    label input{
       display: block;
       width: 100%;
    }

    textarea {
        resize: none;
    }

    fieldset {
        border-style: none;
    }
    
    legend {
        font-size: 1.5em;
        width: 100%;
        font-weight: bold; 
    
        text-align: center;
       
    }
    
    .botones {
        border-style: none;
        display: flex;
        flex-direction: row;    
        justify-content: space-around;  
        width: 40%;
    }

</style>
