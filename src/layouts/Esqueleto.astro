---
import { ViewTransitions } from "astro:transitions";
import MainHeader from "../components/sections/MainHeader.astro";
import "../styles/global.css" 
interface Props {
	titulo: string;
    idioma?: string;
    description?: string;
}
//destructuring de arrays como objectos
const { 
    titulo = "Mi blog personal", 
    idioma = "es",
    description = "Portafolio personal de desarrollo y divulgación web: Javascript, CSS, PHP en el ámbito de HTML",
} = Astro.props

---
<!DOCTYPE html>
<html lang={Astro.props.idioma ?? "es"}>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <meta property="og:title" content={titulo}>
    <meta property="og:description" content={description}>
    <title>{titulo}</title>
    <title>{idioma}</title>
    <link rel="shortcut icon" href="/favicon.svg" type="image/x-icon">
    <ViewTransitions />
</head>
<body>
    <MainHeader />
    <slot/>

</body>
</html>

<style is:global>
    *{
        box-sizing: border-box;
        background-color:rgb(138, 192, 174);
        color:grey
    }
    body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        max-width: 512px; /*1140px/*
        margin: 0 auto; /*centrar y margen arriba y abajo */
    }
    p {
        opacity: .5;
    }
    h1,h2,h3 {
        opacity: .9;
    }
    h2 {
        font-size: 1.1rem;
    }
    
</style>